{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend",
            "type": "shell",
            "command": "uvicorn backend.main:app --reload --port 5050",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "group": "backend"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "group": "frontend"
            },
            "problemMatcher": []
        },
        {
            "label": "Start rq-worker",
            "type": "shell",
            "command": "rq worker",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "group": "rq"
            },
            "problemMatcher": []
        },
        {
            "label": "Start rq-dashboard",
            "type": "shell",
            "command": "rq-dashboard",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "group": "rq-dashboard"
            },
            "problemMatcher": []
        },
        {
            "label": "Start All",
            "dependsOn": [
                "Start Backend",
                "Start Frontend",
                "Start rq-worker",
                "Start rq-dashboard"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}